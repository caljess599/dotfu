# show errors
megadisks(){
	echo $HOSTNAME; for i in {0..1}; do for j in {0..29}; do echo errors on disk controller $i disk $j; storcli /c${i}/eall/s${j} show all | grep -i "error count" | grep -v "= 0"; done; done | pcregrep -M -e '^errors on.*$(\n|.)[A-Z].*$(\n|.)[A-Z]' -e '^errors on.*$(\n|.)[A-Z]'
}
